<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Device\Domain\DeviceFeature" table="devices_features">
        <id name="id" column="id" type="uuid_type"/>
        <field name="featureId" column="feature_id" type="uuid_type"/>
        <field name="deviceId" column="device_id" type="uuid_type"/>
        <field name="payload" column="payload" type="json"/>
    </entity>

</doctrine-mapping>
